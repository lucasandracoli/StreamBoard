<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Gerenciar Campanhas</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.bootstrap5.css"
      rel="stylesheet"
    />
  </head>
  <body id="campaigns-page" class="dashboard">
    <%- include('partials/navbar') %>

    <main class="container">
      <div class="device-header">
        <button class="device-button" id="openCampaignModal">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          <span>Nova Campanha</span>
        </button>
      </div>

      <div class="device-table-wrapper">
        <table class="device-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Status</th>
              <th>Data de Início</th>
              <th>Data de Término</th>
              <th>Dispositivos</th>
              <th>Setor(es)</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody id="campaigns-table-body">
            <% if (campaigns.length === 0) { %>
            <tr id="no-campaigns-row">
              <td colspan="7" style="text-align: center">
                Nenhuma campanha cadastrada.
              </td>
            </tr>
            <% } else { %> <% campaigns.forEach(campaign => { %>
            <tr data-campaign-id="<%= campaign.id %>">
              <td class="break-word"><%= campaign.name %></td>
              <td data-status-cell>
                <span class="<%= campaign.status.class %>">
                  <span class="online-dot"></span>
                  <span data-status-text><%= campaign.status.text %></span>
                </span>
              </td>
              <td><%= campaign.start_date_formatted %></td>
              <td><%= campaign.end_date_formatted %></td>
              <td class="device-badges-cell">
                <% if (campaign.devices && campaign.devices.length > 0) { %> <%
                campaign.devices.forEach(device => { %>
                <span class="device-badge-default"> <%= device.name %> </span>
                <% }) %> <% } else { %> Nenhum <% } %>
              </td>
              <td class="break-word">
                <% const uniqueSectors = [...new Set(campaign.devices.map(d =>
                d.sector).filter(Boolean))]; %> <%= uniqueSectors.length > 0 ?
                uniqueSectors.join(', ') : 'N/A' %>
              </td>
              <td class="actions-cell">
                <button
                  class="action-icon action-icon-editar"
                  data-id="<%= campaign.id %>"
                  title="Editar Campanha"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path
                      d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                    ></path>
                    <path
                      d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
                    ></path>
                  </svg>
                </button>
                <button
                  class="action-icon-excluir"
                  data-id="<%= campaign.id %>"
                  title="Excluir Campanha"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M6 6L18 18M6 18L18 6"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </button>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <div id="confirmationModal" class="confirmation-modal-overlay">
      <div class="confirmation-modal">
        <div class="confirmation-modal-header">
          <h3>Confirmar Exclusão</h3>
        </div>
        <div class="confirmation-modal-body">
          <p>Esta ação não pode ser desfeita.</p>
        </div>
        <div class="confirmation-modal-actions">
          <button id="cancelConfirmation" class="confirmation-modal-cancel">
            Cancelar
          </button>
          <button id="confirmDeletion" class="confirmation-modal-confirm">
            Excluir
          </button>
        </div>
      </div>
    </div>

    <div id="campaignModal" class="modal-overlay campaign-modal">
      <div class="modal-card">
        <div class="modal-header centered">
          <h2 id="campaignModalTitle" class="modal-title centered">
            Cadastrar Nova Campanha
          </h2>
        </div>
        <form
          method="POST"
          class="modal-form"
          novalidate
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="campaignName" class="form-label"
              >Nome da Campanha</label
            >
            <input
              id="campaignName"
              type="text"
              name="name"
              required
              class="modal-input"
            />
          </div>

          <div class="form-group">
            <label for="start_date" class="form-label"
              >Data e Hora de Início</label
            >
            <input
              id="start_date"
              type="text"
              name="start_date"
              required
              class="modal-input"
            />
          </div>

          <div class="form-group">
            <label for="end_date" class="form-label"
              >Data e Hora de Término</label
            >
            <input
              id="end_date"
              type="text"
              name="end_date"
              required
              class="modal-input"
            />
          </div>

          <div class="form-group">
            <label for="sectorFilter" class="form-label"
              >Filtrar por Setor</label
            >
            <select id="sectorFilter" class="modal-input">
              <option value="all">Todos os Setores</option>
              <% sectors.forEach(sector => { %>
              <option value="<%= sector %>"><%= sector %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label for="device_ids" class="form-label"
              >Selecione o(s) Dispositivo(s)</label
            >
            <select
              id="device_ids"
              name="device_ids"
              required
              multiple
            ></select>
          </div>

          <div class="file-upload-wrapper">
            <input
              type="file"
              id="file-upload"
              name="media"
              accept="image/*,video/*"
              hidden
            />
            <label for="file-upload" class="file-upload-button">
              <i class="bi bi-upload"></i>
              <span>Escolher Mídia (Imagem/Vídeo)</span>
            </label>
            <div class="file-preview-wrapper" id="file-preview-wrapper"></div>
          </div>

          <div class="modal-actions">
            <button type="submit" class="device-button">Adicionar</button>
            <button
              type="button"
              id="cancelCampaignModal"
              class="device-button device-button-cancel"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>

    <script>
      const allDevices = <%- JSON.stringify(devices.map(d => ({id: d.id, name: d.name, sector: d.sector}))) %>;
    </script>

    <script src="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/pt.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
