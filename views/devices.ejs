<% const deviceIcons = { tv: 'bi-tv', windows: 'bi-windows', linux:
'bi-terminal', android: 'bi-android2', ios: 'bi-apple', web: 'bi-globe2',
default: 'bi-question-circle' }; %>

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Gerenciar Dispositivos</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="dashboard">
    <%- include("partials/navbar") %>

    <main class="container">
      <div class="device-header">
        <button class="device-button" id="openDeviceModal">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          <span>Novo Dispositivo</span>
        </button>
      </div>

      <div class="device-table-wrapper">
        <table class="device-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Status Dispositivo</th>
              <th>Tipo</th>
              <th>Status</th>
              <th>Setor</th>
              <th>Dados de Acesso</th>
            </tr>
          </thead>
          <tbody>
            <% if (devices.length === 0) { %>
            <tr>
              <td colspan="6" style="text-align: center">
                Nenhum dispositivo cadastrado.
              </td>
            </tr>
            <% } else { %> <% devices.forEach(device => { %>
            <tr>
              <td class="break-word"><%= device.name %></td>
              <td>
                <% if (device.is_online) { %>
                <span class="online-status online">
                  <span class="online-dot"></span> Online
                </span>
                <% } else { %>
                <span class="online-status offline">
                  <span class="online-dot"></span> Offline
                </span>
                <% } %>
              </td>
              <td class="icon-cell">
                <button
                  class="details-icon-button open-details-modal"
                  data-device-id="<%= device.id %>"
                >
                  <i
                    class="bi <%= deviceIcons[device.device_type] || deviceIcons.default %>"
                  ></i>
                </button>
              </td>
              <td>
                <span
                  class="status <%= device.is_active ? 'status-ativo' : 'status-inativo' %>"
                >
                  <%= device.is_active ? 'Ativo' : 'Inativo' %>
                </span>
              </td>
              <td class="break-word"><%= device.sector %></td>
              <td>
                <button
                  class="action-icon show-connection"
                  data-identifier="<%= device.device_identifier %>"
                  data-key="<%= device.authentication_key %>"
                  style="color: var(--color-primary)"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M17 11V7a5 5 0 0 0-10 0v4m12 0H5a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-6a2 2 0 0 0-2-2Z"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <circle cx="12" cy="16" r="1" />
                  </svg>
                </button>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <div id="deviceDetailsModal" class="modal-overlay">
      <div class="modal-card details-modal">
        <div class="details-modal-loader"><div class="spinner"></div></div>
        <div class="details-modal-content">
          <div class="details-modal-header">
            <div id="modalDeviceIcon"></div>
            <div>
              <h3 id="modalDeviceName"></h3>
              <span id="modalDeviceType" class="details-subtitle"></span>
            </div>
            <button class="modal-close-button" id="closeDetailsModal">
              &times;
            </button>
          </div>
          <div class="details-modal-body">
            <div class="details-section">
              <h4>Status da Conexão</h4>
              <p>
                <span class="details-label">Último Acesso</span>
                <span id="modalLastSeen"></span>
              </p>
              <p>
                <span class="details-label">IP Recente</span>
                <span id="modalDeviceIp"></span>
              </p>
              <p>
                <span class="details-label">Qualidade da Rede</span>
                <span id="modalNetworkType"></span>
              </p>
            </div>
            <div class="details-section">
              <h4>Atividade Atual</h4>
              <div id="modalActiveCampaigns"></div>
            </div>
            <div class="details-section">
              <h4>Informações do Dispositivo</h4>
              <p>
                <span class="details-label">Setor</span>
                <span id="modalDeviceSector"></span>
              </p>
              <p>
                <span class="details-label">Cadastrado em</span>
                <span id="modalRegisteredAt"></span>
              </p>
              <p>
                <span class="details-label">Identificador</span>
                <code id="modalDeviceIdentifier"></code>
              </p>
            </div>
          </div>
          <div class="details-modal-footer">
            <button
              class="device-button device-button-revoke"
              id="modalRevokeButton"
            >
              Revogar Acesso
            </button>
          </div>
        </div>
      </div>
    </div>

    <div id="deviceModal" class="modal-overlay">
      <div class="modal-card">
        <div class="modal-header centered">
          <h2 class="modal-title centered">Cadastrar Novo Dispositivo</h2>
        </div>
        <form action="/devices" method="POST" class="modal-form">
          <div class="form-group">
            <label for="newDeviceName" class="form-label"
              >Nome do Dispositivo</label
            >
            <input
              id="newDeviceName"
              type="text"
              name="name"
              required
              class="modal-input"
            />
          </div>
          <div class="form-group">
            <label for="newDeviceType" class="form-label"
              >Tipo de Dispositivo</label
            >
            <select
              id="newDeviceType"
              name="device_type"
              class="modal-input"
              required
            >
              <option value="tv">TV</option>
              <option value="windows">Windows</option>
              <option value="linux">Linux</option>
              <option value="android">Android</option>
              <option value="ios">iOS</option>
              <option value="web">Web</option>
              <option value="unknown" selected>Outro</option>
            </select>
          </div>
          <div class="form-group">
            <label for="newDeviceSector" class="form-label">Setor</label>
            <input
              id="newDeviceSector"
              type="text"
              name="sector"
              required
              class="modal-input"
            />
          </div>
          <div class="modal-actions">
            <button type="submit" class="device-button">Adicionar</button>
            <button
              type="button"
              id="cancelDeviceModal"
              class="device-button device-button-cancel"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>

    <div id="connectionModal" class="modal-overlay">
      <div class="modal-card">
        <div class="modal-header centered">
          <h3 class="modal-title centered">Dados de Acesso</h3>
        </div>
        <form class="modal-form">
          <div class="form-group">
            <label for="modalDeviceId" class="form-label"
              >Identificador do Dispositivo (ID)</label
            >
            <div class="connection-input-group">
              <i class="bi bi-cpu"></i>
              <input type="text" id="modalDeviceId" readonly />
            </div>
          </div>
          <div class="form-group">
            <label for="modalDeviceKey" class="form-label"
              >Chave de Autenticação</label
            >
            <div class="connection-input-group">
              <i class="bi bi-key-fill"></i>
              <input type="text" id="modalDeviceKey" readonly />
            </div>
          </div>
          <div class="modal-actions centered">
            <button
              type="button"
              class="device-button device-button-cancel"
              id="closeConnectionModal"
            >
              Fechar
            </button>
          </div>
        </form>
      </div>
    </div>

    <%- include("partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
