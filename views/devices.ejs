<% const deviceIcons = { tv: 'bi-tv', windows: 'bi-windows', linux:
'bi-terminal', android: 'bi-android2', ios: 'bi-apple', web: 'bi-globe2',
busca_preco: 'bi-upc-scan', default: 'bi-question-circle' }; %>

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Gerenciar Dispositivos</title>
    <link rel="stylesheet" href="/css/styles.css?v=<%= appVersion %>" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.css"
      rel="stylesheet"
    />
  </head>
  <body id="devices-page" class="dashboard">
    <%- include("partials/navbar") %>

    <main class="container">
      <div class="device-header">
        <button class="device-button" id="openDeviceModal">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          <span>Novo Dispositivo</span>
        </button>
      </div>

      <div class="device-table-wrapper">
        <table class="device-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Status</th>
              <th>Empresa</th>
              <th>Setor</th>
              <th>Tipo</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if (devices.length === 0) { %>
            <tr id="no-devices-row">
              <td colspan="6" style="text-align: center">
                Nenhum dispositivo cadastrado.
              </td>
            </tr>
            <% } else { %> <% devices.forEach(device => { %>
            <tr data-device-id="<%= device.id %>">
              <td class="break-word"><%= device.name %></td>
              <td data-status-cell>
                <span class="online-status <%= device.status.class %>">
                  <span class="online-dot"></span>
                  <span data-status-text><%= device.status.text %></span>
                </span>
              </td>
              <td class="break-word"><%= device.company_name || 'N/A' %></td>
              <td class="break-word"><%= device.sector_name || 'N/A' %></td>
              <td class="icon-cell">
                <button
                  class="details-icon-button open-details-modal"
                  data-device-id="<%= device.id %>"
                  title="Ver Detalhes"
                >
                  <i
                    class="bi <%= deviceIcons[device.device_type] || deviceIcons.default %>"
                  ></i>
                </button>
              </td>
              <td class="actions-cell">
                <button
                  class="action-icon action-icon-editar"
                  data-id="<%= device.id %>"
                  title="Editar Dispositivo"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path
                      d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                    ></path>
                    <path
                      d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
                    ></path>
                  </svg>
                </button>
                <button
                  class="action-icon-excluir"
                  data-id="<%= device.id %>"
                  title="Excluir Dispositivo"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M6 6L18 18M6 18L18 6"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </button>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <div id="deviceDetailsModal" class="modal-overlay">
      <div class="modal-card details-modal">
        <div class="details-modal-loader"><div class="spinner"></div></div>
        <div class="details-modal-content" style="display: none">
          <div class="details-modal-header">
            <div id="modalDeviceIcon"></div>
            <div>
              <h3 id="modalDeviceName"></h3>
              <span id="modalDeviceType" class="details-subtitle"></span>
            </div>
          </div>
          <div class="details-modal-body">
            <div class="details-section">
              <h4>Localização</h4>
              <p>
                <span class="details-label">Empresa:</span>
                <span id="modalDeviceCompany"></span>
              </p>
              <p>
                <span class="details-label">Setor:</span>
                <span id="modalDeviceSector"></span>
              </p>
            </div>
            <div class="details-section">
              <h4>Atividade Atual</h4>
              <div id="modalActiveCampaigns"></div>
            </div>
            <div class="details-section">
              <h4>Dados de Acesso</h4>
              <p>
                <span class="details-label">Identificador:</span>
                <code
                  id="modalDeviceIdentifier"
                  class="copyable-code"
                  title="Clique para copiar"
                ></code>
              </p>
              <p>
                <span class="details-label">Chave:</span>
                <code
                  id="modalAuthKey"
                  class="copyable-code"
                  title="Clique para copiar"
                ></code>
              </p>
            </div>
          </div>
          <div class="details-modal-footer">
            <button
              class="device-button"
              id="modalGenerateMagicLinkButton"
              style="display: none"
            >
              <i class="bi bi-link-45deg"></i> Gerar Link Mágico
            </button>
            <button
              class="device-button device-button-revoke"
              id="modalRevokeButton"
            >
              Revogar Acesso
            </button>
            <button
              class="device-button"
              id="modalReactivateButton"
              style="display: none"
            >
              Reativar Dispositivo
            </button>
            <button
              class="device-button device-button-cancel"
              id="closeDetailsModal"
            >
              Fechar
            </button>
          </div>
        </div>
      </div>
    </div>

    <div id="deviceModal" class="modal-overlay">
      <div class="modal-card">
        <div class="modal-header centered">
          <h2 id="deviceModalTitle" class="modal-title centered">
            Cadastrar Novo Dispositivo
          </h2>
        </div>
        <form id="deviceForm" method="POST" class="modal-form">
          <div class="form-group">
            <label for="newDeviceName" class="form-label"
              >Nome do Dispositivo</label
            >
            <input
              id="newDeviceName"
              type="text"
              name="name"
              required
              class="modal-input"
            />
          </div>
          <div class="form-group">
            <label for="newDeviceCompany" class="form-label">Empresa</label>
            <select
              id="newDeviceCompany"
              name="company_id"
              class="modal-input"
              required
            >
              <option value="" disabled selected>Selecione uma empresa</option>
              <% companies.forEach(company => { %>
              <option value="<%= company.id %>"><%= company.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="newDeviceSector" class="form-label">Setor</label>
            <select
              id="newDeviceSector"
              name="sector_id"
              class="modal-input"
              required
              disabled
            >
              <option value="" disabled selected>
                Selecione uma empresa primeiro
              </option>
            </select>
          </div>
          <div class="form-group">
            <label for="newDeviceType" class="form-label"
              >Tipo de Dispositivo</label
            >
            <select
              id="newDeviceType"
              name="device_type"
              class="modal-input"
              required
            >
              <option value="tv">TV</option>
              <option value="windows">Windows</option>
              <option value="linux">Linux</option>
              <option value="android">Android</option>
              <option value="ios">iOS</option>
              <option value="web">Web</option>
              <option value="busca_preco">Busca Preço</option>
              <option value="unknown" selected>Outro</option>
            </select>
          </div>
          <div class="modal-actions">
            <button id="deviceSubmitButton" type="submit" class="device-button">
              Adicionar
            </button>
            <button
              type="button"
              id="cancelDeviceModal"
              class="device-button device-button-cancel"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>

    <div id="confirmationModal" class="confirmation-modal-overlay">
      <div class="confirmation-modal">
        <div class="confirmation-modal-header">
          <h3>Confirmar Exclusão</h3>
        </div>
        <div class="confirmation-modal-body">
          <p>
            Deseja realmente excluir este dispositivo? Esta ação não pode ser
            desfeita.
          </p>
        </div>
        <div class="confirmation-modal-actions">
          <button id="cancelConfirmation" class="confirmation-modal-cancel">
            Cancelar
          </button>
          <button id="confirmDeletion" class="confirmation-modal-confirm">
            Excluir
          </button>
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.js"></script>
    <script type="module" src="/js/main.js?v=<%= appVersion %>"></script>
  </body>
</html>
