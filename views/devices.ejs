<% const deviceIcons = { 'midia_indoor': 'bi-tv', 'terminal_consulta':
'bi-upc-scan', default: 'bi-question-circle' }; const deviceTypeMap = {
'midia_indoor': 'Mídia Indoor', 'terminal_consulta': 'Terminal de Consulta',
'default': 'Tipo Desconhecido' }; %>

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Gerenciar Dispositivos</title>
    <link rel="stylesheet" href="/css/styles.css?v=<%= appVersion %>" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.css"
      rel="stylesheet"
    />
  </head>
  <body id="devices-page" class="dashboard">
    <%- include("partials/navbar") %>

    <main class="container">
      <div class="device-header">
        <button class="device-button" id="openDeviceModal">
          <span>Novo Dispositivo</span>
        </button>
      </div>

      <div class="device-table-wrapper">
        <table class="device-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Status</th>
              <th>Empresa</th>
              <th>Setor</th>
              <th>Tipo</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% if (devices.length === 0) { %>
            <tr id="no-devices-row">
              <td colspan="6" style="text-align: center">
                Nenhum dispositivo cadastrado.
              </td>
            </tr>
            <% } else { %> <% devices.forEach(device => { %>
            <tr
              data-device-id="<%= device.id %>"
              title="Clique para ver detalhes"
            >
              <td data-label="Nome"><%= device.name %></td>
              <td data-label="Status" data-status-cell>
                <span class="online-status <%= device.status.class %>">
                  <span class="online-dot"></span>
                  <span data-status-text><%= device.status.text %></span>
                </span>
              </td>
              <td data-label="Empresa">
                <span class="highlight-company"
                  ><%= device.company_name || 'N/A' %></span
                >
              </td>
              <td data-label="Setor"><%= device.sector_name || 'N/A' %></td>
              <td data-label="Tipo">
                <%= deviceTypeMap[device.device_type] || deviceTypeMap.default
                %>
              </td>
              <td class="actions-cell">
                <button
                  class="action-icon action-icon-editar"
                  data-id="<%= device.id %>"
                  title="Editar Dispositivo"
                >
                  <i class="bi bi-pencil-square"></i>
                </button>
                <button
                  class="action-icon-excluir"
                  data-id="<%= device.id %>"
                  title="Excluir Dispositivo"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M6 6L18 18M6 18L18 6"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </button>
              </td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <div id="deviceDetailsModal" class="modal-overlay">
      <div class="modal-card details-modal">
        <div class="details-modal-loader"><div class="spinner"></div></div>
        <div class="details-modal-content" style="display: none">
          <div class="details-modal-header">
            <div id="modalDeviceIcon"></div>
            <div>
              <h3 id="modalDeviceName"></h3>
              <span id="modalDeviceType" class="details-subtitle"></span>
            </div>
          </div>
          <div class="details-modal-body">
            <fieldset class="form-fieldset">
              <legend class="fieldset-legend">Detalhes do Dispositivo</legend>
              <div class="details-section">
                <h4>Localização</h4>
                <p>
                  <span class="details-label">Empresa:</span>
                  <span
                    id="modalDeviceCompany"
                    class="highlight-company"
                  ></span>
                </p>
                <p>
                  <span class="details-label">Setor:</span>
                  <span id="modalDeviceSector"></span>
                </p>
              </div>
              <div class="details-section">
                <h4>Atividade e Conexão</h4>
                <p>
                  <span class="details-label">Visto por último:</span>
                  <span id="modalLastSeen"></span>
                </p>
                <p>
                  <span class="details-label">Data de Cadastro:</span>
                  <span id="modalRegisteredAt"></span>
                </p>
                <p>
                  <span class="details-label">Campanhas Ativas:</span>
                  <span id="modalActiveCampaigns"></span>
                </p>
              </div>
            </fieldset>
          </div>

          <div id="otpView" class="otp-view">
            <div id="otpCode" class="otp-view-code"></div>
            <div id="otpExpiry" class="otp-view-expiry"></div>
          </div>

          <div class="details-modal-footer">
            <button
              class="device-button"
              id="modalGenerateMagicLinkButton"
              style="display: none"
            >
              Link Mágico
            </button>
            <button
              class="device-button"
              id="modalGenerateOtpButton"
              style="display: none"
            >
              Gerar OTP
            </button>
            <button
              class="device-button device-button-revoke"
              id="modalRevokeButton"
              style="display: none"
            >
              Revogar
            </button>
            <button
              class="device-button"
              id="modalReactivateButton"
              style="display: none"
            >
              Reativar
            </button>
            <button
              class="device-button device-button-cancel"
              id="closeDetailsModal"
            >
              Fechar
            </button>
          </div>
        </div>
      </div>
    </div>

    <div id="deviceModal" class="modal-overlay">
      <div class="modal-card">
        <div class="modal-header centered">
          <h2 id="deviceModalTitle" class="modal-title centered">
            Cadastrar Dispositivo
          </h2>
        </div>
        <form id="deviceForm" method="POST" class="modal-form">
          <div class="form-group">
            <label for="newDeviceName" class="form-label"
              >Nome do Dispositivo</label
            >
            <input
              id="newDeviceName"
              type="text"
              name="name"
              required
              class="modal-input"
            />
          </div>
          <div class="form-group">
            <label for="newDeviceCompany" class="form-label">Empresa</label>
            <select
              id="newDeviceCompany"
              name="company_id"
              class="modal-input"
              required
            >
              <option value="" disabled selected>Selecione uma empresa</option>
              <% companies.forEach(company => { %>
              <option value="<%= company.id %>"><%= company.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="newDeviceSector" class="form-label">Setor</label>
            <select
              id="newDeviceSector"
              name="sector_id"
              class="modal-input"
              required
              disabled
            >
              <option value="" disabled selected>
                Selecione uma empresa primeiro
              </option>
            </select>
          </div>
          <div class="form-group">
            <label for="newDeviceType" class="form-label"
              >Tipo de Dispositivo</label
            >
            <select
              id="newDeviceType"
              name="device_type"
              class="modal-input"
              required
            >
              <option value="midia_indoor" selected>Mídia Indoor</option>
              <option value="terminal_consulta">Terminal de Consulta</option>
            </select>
          </div>
          <div class="modal-actions">
            <button id="deviceSubmitButton" type="submit" class="device-button">
              Adicionar
            </button>
            <button
              type="button"
              id="cancelDeviceModal"
              class="device-button device-button-cancel"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>

    <div id="confirmationModal" class="confirmation-modal-overlay">
      <div class="confirmation-modal">
        <div class="confirmation-modal-header">
          <h3>Confirmar Exclusão</h3>
        </div>
        <div class="confirmation-modal-body">
          <p>
            Deseja realmente excluir este item? Esta ação não pode ser desfeita.
          </p>
        </div>
        <div class="confirmation-modal-actions">
          <button id="cancelConfirmation" class="confirmation-modal-cancel">
            Cancelar
          </button>
          <button id="confirmDeletion" class="confirmation-modal-confirm">
            Excluir
          </button>
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3.10.0/notyf.min.js"></script>
    <script type="module" src="/js/main.js?v=<%= appVersion %>"></script>
  </body>
</html>
