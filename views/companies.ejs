<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Gerenciar Empresas</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
  </head>
  <body class="dashboard">
    <%- include("partials/navbar") %>

    <main class="container">
      <div class="company-header">
        <button class="company-button" id="openCompanyModal">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="white"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
          <span>Nova Empresa</span>
        </button>
      </div>

      <div class="company-table-wrapper">
        <table class="company-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>CNPJ</th>
              <th>Email</th>
              <th>CEP</th>
              <th>Cidade</th>
              <th>Estado</th>
            </tr>
          </thead>
          <tbody>
            <% if (companies.length === 0) { %>
            <tr>
              <td colspan="6" style="text-align: center">
                Nenhuma empresa cadastrada.
              </td>
            </tr>
            <% } else { %> <% companies.forEach(company => { %>
            <tr>
              <td><%= company.name %></td>
              <td><%= company.cnpj %></td>
              <td><%= company.email %></td>
              <td><%= formatCEP(company.cep) %></td> <!-- Aqui formatamos o CEP -->
              <td><%= company.city %></td>
              <td><%= company.state %></td>
            </tr>
            <% }) %> <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <div id="companyModalOverlay" class="modal-overlay">
      <div id="companyModal" class="modal-card">
        <div class="modal-header centered">
          <h2 class="modal-title centered">Cadastrar Nova Empresa</h2>
        </div>
        <form id="companyForm" class="modal-form">
          <input
            type="text"
            name="name"
            placeholder="Nome"
            required
            class="company-modal-input"
          />
          <input
            type="text"
            name="cnpj"
            placeholder="CNPJ"
            required
            class="company-modal-input"
            id="cnpj"
          />
          <input
            type="email"
            name="email"
            placeholder="Email"
            required
            class="company-modal-input"
          />
          <input
            type="text"
            name="cep"
            placeholder="CEP"
            required
            class="company-modal-input"
            id="cep"
          />
          <input
            type="text"
            name="city"
            placeholder="Cidade"
            required
            class="company-modal-input"
            id="city"
          />
          <input
            type="text"
            name="state"
            placeholder="Estado"
            required
            class="company-modal-input"
            id="state"
          />
          <div class="modal-actions">
            <button type="submit" class="company-button">Adicionar</button>
            <button
              type="button"
              id="cancelCompanyModal"
              class="company-button company-button-cancel"
            >
              Cancelar
            </button>
          </div>
        </form>
      </div>
    </div>

    <%- include("partials/footer") %>
    <script src="/js/companies.js"></script>
  </body>
</html>
